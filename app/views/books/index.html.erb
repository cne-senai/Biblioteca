<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Título</th>
        <th scope="col">Autor</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>
    <tbody>
      <% @books.each_with_index do |b, i|%>
        <tr>
          <td><%= i+1 %></td>
          <td><%= b.title %></td>
          <td><%= b.author %></td>
          <td>
            <%= link_to "Ver", book_path(b.id), class:"btn btn-sm btn-secondary fw-bold border-white bg-dark" %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to "Sair", destroy_user_session_path, class:"btn btn-lg btn-secondary fw-bold border-white bg-dark" %> 

</div>
