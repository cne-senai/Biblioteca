<br/><br/><h1>Log in</h1><br/><br/>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row g-3 align-items-center">
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %><br/>
  </div>
    <br/>
  <div class="field">
    <%= f.label :Senha %><br />
    <%= f.password_field :password, autocomplete: "current-password" %><br/>
  </div>
    <br/>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Salvar_senha? %>
    </div>
  <% end %>
    <br/>
  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-md btn-secondary fw-bold border-white bg-dark" %>
  </div> 
  <div class="actions">
    <%= link_to "Nova Conta", new_registration_path(resource_name), class:"btn btn-md btn-secondary fw-bold border-white bg-dark" %> <br />
  </div>
  
<% end %>



</div>
    <br/><br/><br/><br/>
  <%= link_to "Voltar", root_path, class:"btn btn-sm btn-secondary" %>
